jQuery(document).ready(function($){setTimeout(function(){$(".tab-section").hide();$(".tab-active").show();},1000);$(".archive-list").click(function(e){e.preventDefault();$(".archive-dropdown").toggle();});$(".archive-dropdown").click(function(e){e.stopPropagation();});$("body").on("click",function(event){if(!$(event.target).is(".archive-list")&&$(".archive-dropdown").is(":visible")){console.log("hide");$(".archive-dropdown").hide();}});$(".menu-search button").click(function(e){e.preventDefault();$("html, body").animate({scrollTop:$("#search-section").offset().top,},2000);});function autoSlider(){$(".phone-screen").each(function(){var phones=$("li:visible",this);phones.fadeOut(1000);if(phones.next()&&phones.next().length){phones.next().fadeIn(1000).end();}else{phones.siblings(":first").fadeIn(1000).end();}});$(".phone-screen-steps").each(function(){var steps=$("li.active",this);steps.removeClass("active");if(steps.next()&&steps.next().length){steps.next().addClass("active").end();}else{steps.siblings(":first").addClass("active").end();}});}
var playSlider=setInterval(autoSlider,5000);$(".phone-screen-steps a").click(function(e){e.preventDefault();var step=$(this).data("step");var phone=$(this).attr("href");$(phone+"-steps li").removeClass("active");$(this).parent().addClass("active");$(phone+" ul li").fadeOut();$(phone+" ul li:nth-child("+step+")").fadeIn();clearInterval(playSlider);playSlider=setInterval(autoSlider,5000);});$(".tab-links a").click(function(e){e.preventDefault();var container=$(this).data("container");var id=$(this).attr("href");$("."+container+"-links a").removeClass("active");$(this).addClass("active");$("."+container+"-panel").hide();$(id+"-panel").show();});$(".btn-scroll-to a").click(function(e){e.preventDefault();var sectionId=$(this).attr("href");$("html, body").animate({scrollTop:$(sectionId).offset().top,},1000);});$(".btn-expand-all").click(function(e){e.preventDefault();var hyperlink=$(this).attr("href");if($(this).data("expand")==0){$(hyperlink+" .faq-question").addClass("vc_active");$(this).text("- Collapse all");$(this).data("expand","1");$(hyperlink+" .vc_tta-panel-body").removeAttr("style");}else{$(hyperlink+" .faq-question").removeClass("vc_active");$(this).text("+ Expand all");$(this).data("expand","0");}});});